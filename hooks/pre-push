#!/bin/bash

# Pre-push hook for RentCoordinator
# Runs build and linting before allowing push

set -e

echo "Running pre-push checks..."
echo

# Check if we're in the right directory
if [ ! -f "deno.json" ]; then
    echo "Error: Must be run from repository root"
    exit 1
fi

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m'

print_success() { echo -e "${GREEN}✓${NC} $1"; }
print_error() { echo -e "${RED}✗${NC} $1"; }
print_info() { echo -e "  $1"; }

# 1. Build the application
print_info "Building application..."
if deno task build; then
    print_success "Build succeeded"
else
    print_error "Build failed"
    echo
    echo "Fix build errors before pushing"
    exit 1
fi

# 2. Run linter on compiled output
print_info "Running linter on compiled JavaScript..."
if deno task lint; then
    print_success "Linting passed"
else
    print_error "Linting failed"
    echo
    echo "Fix linting errors before pushing"
    exit 1
fi

# 3. Optional: Run tests if they exist
if grep -q '"test"' deno.json 2>/dev/null; then
    print_info "Running tests..."
    if deno test -A; then
        print_success "Tests passed"
    else
        print_error "Tests failed"
        echo
        echo "Fix failing tests before pushing"
        exit 1
    fi
fi

echo
print_success "All pre-push checks passed!"
echo

exit 0
