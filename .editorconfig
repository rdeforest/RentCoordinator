# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# CoffeeScript, JavaScript, JSON, YAML - 2 spaces
[*.{coffee,js,json,yaml,yml}]
indent_style = space
indent_size = 2

# Shell scripts - 4 spaces (traditional Unix style)
[*.{sh,bash}]
indent_style = space
indent_size = 4

# Markdown - 2 spaces, preserve trailing whitespace for line breaks
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Service files, config files - 2 spaces
[*.{service,conf,config}]
indent_style = space
indent_size = 2

# Makefiles must use tabs
[{Makefile,makefile,GNUmakefile,*.mk}]
indent_style = tab
indent_size = 4

# Cakefile - 2 spaces (it's CoffeeScript)
[Cakefile]
indent_style = space
indent_size = 2